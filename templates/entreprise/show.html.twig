{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <div style="float: right;margin-right:20px">
        <a href="{{ path('app_entreprise_index') }}"><i class="fa fa-fw fa-rotate-left" style="font-size: 40px;color: #0f0f0f" aria-hidden="true"></i></a>
        <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" style="margin-right:20px"><i class="fa fa-fw fa-edit" style="font-size: 40px;color: #0f0f0f" aria-hidden="true"></i></a>
    </div>
    <h1>Détail de l'activité en entreprise : {{ eleve.nom }} {{ eleve.prenom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>EleveId</th>
                <td>{{ entreprise.eleveId }}</td>
            </tr>
            <tr>
                <th>Semaine</th>
                <td>{{ entreprise.semaine }}</td>
            </tr>
            <tr>
                <th>ActiPrev</th>
                <td>{{ entreprise.actiPrev }}</td>
            </tr>
            <tr>
                <th>ActiRea</th>
                <td>{{ entreprise.actiRea }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ entreprise.commentaire }}</td>
            </tr>
            <tr>
                <th>CompeMiseEnEouvre</th>
                <td>{{ entreprise.compeMiseEnEouvre }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('entreprise/_delete_form.html.twig') }}
{% endblock %}
